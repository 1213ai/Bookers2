<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/029ff23b52.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class=" d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal text-white"><%= link_to 'Bookers', root_path %></h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <div class="header">

      <% if user_signed_in? %>

      <a class="p-2 text-white"><%= link_to user_session_path do %>
          <i class="fas fa-home"> Home</i>
        </a>
        <% end %>

      <a class="p-2 text-white"><%= link_to users_path do %>
          <i class="fas fa-users"> Users</i>
        </a>
        <% end %>

        <a class="p-2 text-white"><%= link_to books_path do %>
          <i class="fas fa-book-open"> Books</i>
        </a>
        <% end %>

        <a class="p-2 text-white"><%= link_to destroy_user_session_path, method: :delete do%>
          <i class="fas fa-sign-out-alt"> Ingout</i>
         </a>
         <% end %>

      <% else %>

        <a class="p-2 text-white"><%= link_to root_path do %>
          <i class="fas fa-home"> Home</i>
        </a>
        <% end %>

        <a class="p-2 text-white"><%= link_to about_path do %>
         <i class="fas fa-link"> About</i>
        <% end %>
        </a>
        <a class="p-2 text-white"><%= link_to new_user_registration_path do %>
         <i class="fas fa-user-plus"> sign up</i>
        <% end %>
        </a>
        <a class="p-2 text-white"><%= link_to new_user_session_path do %>
         <i class="fas fa-sign-out-alt"> login</i>
        <% end %>
      <% end %>
        </a>
        </div>
      </nav>
    </div>

  <%= yield %>
  </body>
  <p class="fixed-bottom text-center mb-5">CopyRight Infratop.inc</p>
  <!---フッターが他のコンテンツと-->
  
</html>
