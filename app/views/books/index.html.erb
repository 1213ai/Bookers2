<body>
  <div class="container">
   <div class="row">
    <div class="col-lg-4" style="background-color: white;">
     <div class ="book-new">
       <h2>New book</h2>
         <%= form_with model: @book,url:'/books', local: true do |f| %>
         <h4>title</h4>
         <%= f.text_field :title %>
         <h4>body</h4>
         <%= f.text_area :body %>
           <div> <%= f.submit 'Create Book' %></div>
          <% end %>
      </div>
     </div>
     <div class="col-lg-8">
        <h2>Books</h2>
        <table class="table">
          <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
        <tbody>
        <% @books.each do |book| %>
         <tr>
           <%= link_to book_path(book.id) do %>
            <td><%= book.user.name %></td>
           <% end %>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
        </tr>
       <% end %>
      </tbody>
      </table>
     </div>
   </div>
 </div>
</body>




