<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3" style="background-color: white;">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

     <table class="table">

      <tbody>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>

      <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-lg btn-block' do %>
      <i class="fas fa-user-cog"></i>
     <% end %>


      <div class ="book-new">
       <h2 class="mt-3 my-3">New book</h2>


        <%= form_with model: @newbook, url:'/books', local: true do |f| %>

         <h7>Title</h7>
         <div class="form-group mt-2" >
          <%= f.text_field :title, class: 'form-control' %>
         </div>
         <h7>Opinion</h7>
         <div class="form-group mt-2" >
          <%= f.text_area :body, class: 'form-control' %>
         </div>

           <div><%= f.submit 'Create Book', class:"btn btn-success" %></div>
          <% end %>
      </div>
     </div>






<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
    <table class="table">
       <tbody>
         <tr>
           <td>
           <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
            <%= @book.user.name %>
           <% end %></td>
           <td><%= @book.title %></td>
           <td><%= @book.body %></td>

           <% if user_signed_in? && current_user.id == @book.user_id %>
           <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
           <td><%= link_to "Destroy", destroy_book_path(@book.id), class: "btn btn-danger", method: :delete, "dete-confirm" =>"Are you sure?" %></td>
           <% end %>

           </tr>
       </tbody>
       </div>
       </div>
     </div>


    </table>
